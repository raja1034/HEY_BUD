
<div class="container">
  <br />
  <h3><strong> Your Interests are: </h3>
    <div class="container">

      <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Edit your Interests
      </button>

      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <%= form_with url: user_interests_path, local: true  do |form| %>
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Select your Interests</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">

                <% Interest.all.each do |interest| %>
                  <div class="form-check">

                    <%= form.check_box "interest_ids[]", {checked: current_user.interests.include?(interest), class:"form-check-input"}, interest.id, nil %>
                    <label class="form-check-label" for="flexCheckChecked">
                      <%= interest.name %>
                    </label>
                  </div>
                <% end %>

              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
              </div>
            <% end %>
          </div>
        </div>
      </div>


      <% @user_interests.each do |user_interest| %>
        <div class="card" style="width: 15rem"  style="border-radius: 25px">
          <div class="card-body ">
            <h4><strong><%=user_interest.interest.name%></h4>
            <p><%=user_interest.description%></p>
            <p><em><%= link_to " update ", edit_user_interest_path(user_interest.id) %></em> </p>
          </div>
        </div>
      <% end %>
    </div>
</div>
