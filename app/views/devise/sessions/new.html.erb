<div class="container-signin">
<%# <div class="white rounded p-3"> %>
  <div class="signin-page-content">
    <div class="row justify-content-center">
      <div class="col-4">

        <h2>Log in</h2>

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="signinform">
                  <%= f.input :email,
                              required: false,
                              autofocus: true,
                              input_html: { class: "signinform-input", autocomplete: "email" } %>
                  <%= f.input :password,
                              required: false,
                              input_html: { class: "signinform-input", autocomplete: "current-password" } %>
                  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                </div>

                <button class="heyBudButton-reverse">
                  <div class="form-actions">
                    <%= f.button :submit, "Log in" %>
                  </div>
                </button> <br />
            <% end %>

            <%= render "devise/shared/links" %>

      </div>
    </div>
<%# </div> %>
  </div>
</div>
