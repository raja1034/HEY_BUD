<div class="container-signin">
  <div class="white rounded p-3">
    <div class="row justify-content-center">
      <div class="col-4">

        <h2 class="text-center sign-up-page">SIGN UP TO GET up to get STARTED</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :first_name,
                        required: true,
                        autofocus: true,
                        input_html: { class: "signinform-input", autocomplete: "First Name" }%>
            <%= f.input :last_name,
                        required: true,
                        autofocus: true,
                        input_html: { class: "signinform-input", autocomplete: "Last name" }%>
            <%= f.input :city,
                        required: true,
                        autofocus: true,
                        input_html: { class: "signinform-input", autocomplete: "City" }%>
            <%= f.input :age,
                        required: true,
                        autofocus: true,
                        input_html: { class: "signinform-input", autocomplete: "Age" }%>
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { class: "signinform-input", autocomplete: "email" }%>
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { class: "signinform-input", autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { class: "signinform-input", autocomplete: "new-password" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>
