
<div class="container-main">
    <div class="container">
  <h1 class="text-center">EXPLORE MATCHES</h1>

  <div class="grid">
  <% @potential_matches.each do |key, value| %>
  <div class="card">
    <div class="additional">
      <div class="user-card">
        <%= image_tag key.avatar_url , class:"avatar-card" %>

        <div class="points center-connect">
          <%= simple_form_for(Match.new) do |f| %>
            <%= f.input :asker_id, input_html: { value: current_user.id }, as: :hidden %>
            <%= f.input :receiver_id, input_html: { value: key.id }, as: :hidden %>
            <%= f.submit "connect" %>
          <% end %>
        </div>
    </div>

      <div class="more-info">

        <h1><%= key.username.upcase %></h1>
        <div class="coords">
          <span>AGE</span>
          <span><%= key.age %></span>
        </div>
        <div class="coords">
          <span>LOCATION</span>
          <span><%= key.city.upcase %></span>
        </div>
        <div class="stats">
          <div>
            <div class="title"><%= key.interests.first.name %></div>
          </div>
          <div>
            <div class="title"><%= key.interests.second.name %></div>
            <%# <i class="fa fa-gamepad"></i>
            <div class="value">27</div> %>
          </div>
          <div>
            <div class="title"><%= key.interests.third.name %></div>
          </div>
        </div>
      </div>
    </div>
    <div class="general">
      <h2>DISCOVER YOUR MATCH</h2>
    </div>
  </div>
  <% end %>
  </div>
</div>
</div>
