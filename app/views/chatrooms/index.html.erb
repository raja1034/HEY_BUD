<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="row">
    <div class="col-3">
    <p> Hello <%= current_user.first_name %> </p>
    <hr>
    <% @chatrooms.each do |chatroom| %>
      <%= link_to chatroom do %>
        <div class="card mb-2">
          <div class="card-body">
            <%= chatroom.match.asker_id %>
          </div>
        </div>
      <% end %>
    <% end %>
    </div>

    <div class="col-9">
      <% if @chatroom.present? %>
      <h1>#<%= @chatroom.match_id %></h1>
      <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
        <% @chatroom.messages.each do |message| %>
        <%= render "/messages/message", message: message %>
        <% end %>
        <%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
            <%= f.input :content, label: false, placeholder: "Message ##{@chatroom.match_id }" %>
            <%= f.button :submit, label: false%>
        <% end %>
      </div>
    <% end %>
    </div>
